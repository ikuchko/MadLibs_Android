<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.madlibs.InputGreetingsStory">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView2" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:text="Greetings, Earthlings!"
                    android:id="@+id/textView29"
                    android:layout_column="0"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_span="3"
                    android:gravity="center" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="NOUN (PLURAL)"
                        android:id="@+id/textView25"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nounPlural"
                        android:layout_column="2"
                        android:hint="Enter here"
                        android:autoText="false"
                        android:width="200dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="OCCUPATION"
                        android:id="@+id/textView7"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/occupation"
                        android:layout_column="2"
                        android:hint="Enter here"
                        android:autoText="false"
                        android:width="200dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="ANIMAL (PLURAL)"
                        android:id="@+id/textView12"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/animalPlural"
                        android:layout_column="2"
                        android:layout_span="1"
                        android:hint="Enter here"
                        android:autoText="false"
                        android:width="200dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="PLACE"
                        android:id="@+id/textView9"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/place"
                        android:layout_column="2"
                        android:hint="Enter here"
                        android:autoText="false"
                        android:width="200dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="VERB"
                        android:id="@+id/textView8"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/verb"
                        android:layout_column="2"
                        android:layout_span="1"
                        android:hint="Enter here"
                        android:autoText="false"
                        android:width="200dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:text="NOUN"
                        android:id="@+id/textView4"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/noun"
                        android:layout_column="2"
                        android:layout_span="1"
                        android:hint="Enter here"
                        android:autoText="false"
                        android:width="200dp"
                        android:gravity="left" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="go mad!"
                        android:id="@+id/goMadButton"
                        android:background="@color/colorAccentSecondary"
                        android:textColor="#FFFFFF"
                        android:layout_span="3" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>
